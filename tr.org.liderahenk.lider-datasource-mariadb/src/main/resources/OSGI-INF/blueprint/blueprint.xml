<cm:property-placeholder persistent-id="tr.org.liderahenk.datasource.mariadb.cfg"
        update-strategy="reload">
        <cm:default-properties>
            <cm:property name="server" value="db.mys.pardus.org.tr" />
            <cm:property name="db" value="liderdb"/>
            <cm:property name="port" value="3306"/>
            <cm:property name="user" value="root"/>
            <cm:property name="password" value="qwert123"/>
        </cm:default-properties>
    </cm:property-placeholder>
  
  <service 
      ref="mariadbConnectionPoolDataSource"
      interface="javax.sql.DataSource">
      <service-properties>
      <entry key="osgi.jndi.service.name" value="jdbc/liderdb"/>
      <entry key="datasource.name" value="MySQL"/>
      </service-properties>
  </service>
  
