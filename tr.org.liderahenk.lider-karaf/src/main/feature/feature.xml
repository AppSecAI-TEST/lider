<features name="${project.artifactId}-${project.version}" xmlns="http://karaf.apache.org/xmlns/features/v1.0.0">
	<feature name="lider-features" description="${project.name}" version="${project.version}">
		<feature prerequisite="true">lider-ahenk-config</feature>
		<feature prerequisite="true">jpa</feature>
		<feature prerequisite="true">transaction</feature>
		<feature prerequisite="true">jndi</feature>
		<feature prerequisite="true">war</feature>
		<feature prerequisite="true">hibernate</feature>
		<feature prerequisite="true">webconsole</feature>
		<feature prerequisite="true">spring-web</feature>
		<feature prerequisite="true">spring</feature>
		<feature prerequisite="true">spring-dm</feature>
		<feature prerequisite="true">spring-dm-web</feature>
		<feature prerequisite="true">config</feature>
		<feature prerequisite="true">wrapper</feature>
		<feature prerequisite="true">eventadmin</feature>
	</feature>
	<feature name="lider-ahenk-config" description="Contains necessary config files for lider-server-core" version="${project.version}">
		<!-- New configuration files must be added here in order to copy them into Karaf instance: -->
		<configfile finalname="/etc/tr.org.liderahenk.cfg">mvn:tr.org.liderahenk/tr.org.liderahenk.lider-config/${project.version}/cfg</configfile>
	</feature>
</features>
